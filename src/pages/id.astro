<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Montserrat', sans-serif;
        background: #000;
        color: #f5f5f5;
        overflow-x: hidden;
    }
    
    h1, h2, h3 {
        font-family: 'Cormorant Garamond', serif;
        font-weight: 300;
        letter-spacing: 0.05em;
    }
    
    section {
        min-height: 100vh;
        position: relative;
    }
    
    .fullscreen-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }
    
    .overlay-gradient {
        background: linear-gradient(180deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.8) 100%);
    }
    
    .content {
        position: relative;
        z-index: 2;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
        padding: 2rem 4rem;
        transition: all 0.5s ease;
        background: transparent;
    }
    
    nav.scrolled {
        background: rgba(0, 0, 0, 0.95);
        padding: 1.5rem 4rem;
        backdrop-filter: blur(20px);
    }

    .mobile-menu {
        position: fixed;
        top: 0;
        right: -100%;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.98);
        backdrop-filter: blur(20px);
        z-index: 200;
        transition: right 0.5s ease;
    }

    .mobile-menu.active {
        right: 0;
    }

    .mobile-menu-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        position: relative;
    }

    .close-menu {
        position: absolute;
        top: 2rem;
        right: 2rem;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 3rem;
        line-height: 1;
    }

    .mobile-menu-links {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .mobile-menu-link {
        font-size: 1.5rem;
        font-weight: 300;
        letter-spacing: 0.2em;
        color: #f5f5f5;
        transition: color 0.3s ease;
    }

    .mobile-menu-link:hover {
        color: #c9a961;
    }
    
    .fade-in {
        opacity: 0;
        transform: translateY(60px);
        transition: all 1.2s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    
    .fade-in.active {
        opacity: 1;
        transform: translateY(0);
    }
    
    .slide-in-left {
        opacity: 0;
        transform: translateX(-100px);
        transition: all 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    
    .slide-in-left.active {
        opacity: 1;
        transform: translateX(0);
    }
    
    .slide-in-right {
        opacity: 0;
        transform: translateX(100px);
        transition: all 1.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    
    .slide-in-right.active {
        opacity: 1;
        transform: translateX(0);
    }
    
    .split-screen {
        display: grid;
        grid-template-columns: 1fr 1fr;
        height: 100vh;
    }
    
    .split-image {
        position: relative;
        overflow: hidden;
    }
    
    .split-image img {
