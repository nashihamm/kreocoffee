---
export function getStaticPaths() {
    return [
        { params: { slug: 'gayo-hitam' } },
        { params: { slug: 'papua-cahaya' } },
        { params: { slug: 'toraja-seimbang' } }
    ];
}

const { slug } = Astro.params;

const products = {
    'gayo-hitam': {
        name: 'Dark Gayo',
        type: 'DARK ROAST',
        price: 'Rp 420K',
        origin: 'Aceh, Indonesia',
        altitude: '1,200 - 1,600m',
        process: 'Natural',
        roastLevel: 'Dark',
        description: 'Body yang intens dan lembut dengan sentuhan cokelat hitam, kenari panggang, dan sedikit blackcurrant.',
        fullDescription: 'Roast paling gelap kami, Dark Gayo adalah bukti seni kesabaran. Bersumber dari hutan kopi kuno Gayo, Aceh, biji-biji ini menjalani proses roasting yang diperpanjang yang menghasilkan rasa yang dalam dan kompleks. Hasilnya adalah kopi yang berani, full-bodied dengan mouthfeel yang mewah dan aftertaste yang bertahan lama.',
        tastingNotes: ['Cokelat Hitam', 'Kenari Panggang', 'Blackcurrant', 'Karamel', 'Smoky'],
        image: 'https://images.unsplash.com/photo-1610889556528-9a770e32642f?w=800&q=80',
        images: [
            'https://images.unsplash.com/photo-1610889556528-9a770e32642f?w=800&q=80',
            'https://images.unsplash.com/photo-1514432324607-a09d9b4aefdd?w=800&q=80',
            'https://images.unsplash.com/photo-1559056199-641a0ac8b55e?w=800&q=80'
        ]
    },
    'papua-cahaya': {
        name: 'Light Papua',
        type: 'LIGHT ROAST',
        price: 'Rp 380K',
        origin: 'Papua, Indonesia',
        altitude: '1,400 - 1,800m',
        process: 'Washed',
        roastLevel: 'Light',
        description: 'Lembut dan cerah dengan aroma bunga melati, jeruk bergamot, dan manisnya madu.',
        fullDescription: 'Light Papua menangkap esensi cahaya pagi dalam secangkir. Dengan hati-hati bersumber dari perkebunan Papua ketinggian tinggi, biji-biji ini di-roast ringan untuk mempertahankan note bunga dan citrus yang halus. Sempurna bagi mereka yang menghargai kompleksitas bernuansa dari specialty coffee.',
        tastingNotes: ['Melati', 'Bergamot', 'Madu', 'Teh Putih', 'Citrus'],
        image: 'https://images.unsplash.com/photo-1511920170033-f8396924c348?w=800&q=80',
        images: [
            'https://images.unsplash.com/photo-1511920170033-f8396924c348?w=800&q=80',
            'https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?w=800&q=80',
            'https://images.unsplash.com/photo-1442512595331-e89e73853f31?w=800&q=80'
        ]
    },
    'toraja-seimbang': {
        name: 'Medium Toraja',
        type: 'MEDIUM ROAST',
        price: 'Rp 400K',
        origin: 'Toraja, Sulawesi',
        altitude: '1,300 - 1,700m',
        process: 'Semi-Washed',
        roastLevel: 'Medium',
        description: 'Keseimbangan harmonis dari gula karamel, hazelnut, dan aprikot kering dengan tekstur halus.',
        fullDescription: 'Medium Toraja mewakili titik tengah yang sempurna. Bersumber dari tanah vulkanik Toraja, medium roast ini menawarkan secangkir yang seimbang yang menarik bagi penggemar light dan dark roast. Teksturnya yang halus dan profil rasa yang kompleks menjadikannya kemewahan sehari-hari yang ideal.',
        tastingNotes: ['Gula Karamel', 'Hazelnut', 'Aprikot Kering', 'Cokelat Susu', 'Vanilla'],
        image: 'https://images.unsplash.com/photo-1509042239860-f550ce710b93?w=800&q=80',
        images: [
            'https://images.unsplash.com/photo-1509042239860-f550ce710b93?w=800&q=80',
            'https://images.unsplash.com/photo-1517487881594-2787fef5ebf7?w=800&q=80',
            'https://images.unsplash.com/photo-1461023058943-07fcbe16d735?w=800&q=80'
        ]
    }
};

const product = products[slug as keyof typeof products];
if (!product) return Astro.redirect('/id');

const title = `${product.name} - Kreo Roastery`;
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
</head>
<body class="grain">
    <!-- Navigation -->
    <nav>
        <div class="flex justify-between items-center">
            <a href="/id" class="text-2xl md:text-3xl font-light tracking-[0.2em] md:tracking-[0.3em] text-luxury">KREO</a>
            <div class="hidden md:flex space-x-8 lg:space-x-12 text-sm tracking-widest font-light">
                <a href="/id#story" class="hover:text-luxury transition duration-500">CERITA</a>
                <a href="/id#craft" class="hover:text-luxury transition duration-500">KERAJINAN</a>
                <a href="/id#collection" class="hover:text-luxury transition duration-500">KOLEKSI</a>
                <a href="/id#experience" class="hover:text-luxury transition duration-500">PENGALAMAN</a>
            </div>
            <a href="/id" class="luxury-button text-xs hidden md:block">KEMBALI</a>
            <a href="/id" class="md:hidden text-luxury text-2xl">←</a>
        </div>
    </nav>

    <!-- Product Hero -->
    <section class="product-hero">
        <div class="container-custom">
            <div class="product-grid">
                <div class="product-images">
                    <div class="main-image fade-in">
                        <img src={product.image} alt={product.name} id="mainImage">
                    </div>
                    <div class="thumbnail-grid">
                        {product.images.map((img, index) => (
                            <div class="thumbnail fade-in" data-image={img}>
                                <img src={img} alt={`${product.name} ${index + 1}`}>
                            </div>
                        ))}
                    </div>
                </div>

                <div class="product-info fade-in">
                    <p class="text-sm tracking-[0.3em] text-luxury mb-4">{product.type}</p>
                    <h1 class="text-5xl md:text-7xl font-light mb-6">{product.name}</h1>
                    <p class="text-3xl font-light text-luxury mb-8">{product.price}</p>
                    
                    <div class="divider-left mb-8"></div>
                    
                    <p class="text-lg font-light leading-relaxed opacity-90 mb-8">{product.description}</p>
                    
                    <div class="product-details mb-8">
                        <div class="detail-item">
                            <span class="detail-label">Asal</span>
                            <span class="detail-value">{product.origin}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Ketinggian</span>
                            <span class="detail-value">{product.altitude}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Proses</span>
                            <span class="detail-value">{product.process}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Level Roast</span>
                            <span class="detail-value">{product.roastLevel}</span>
                        </div>
                    </div>

                    <div class="quantity-selector mb-8">
                        <button class="qty-btn" id="decreaseQty">−</button>
                        <input type="number" value="1" min="1" id="quantity" readonly>
                        <button class="qty-btn" id="increaseQty">+</button>
                    </div>

                    <button class="luxury-button w-full mb-4">TAMBAH KE KERANJANG</button>
                    <button class="luxury-button-outline w-full">TAMBAH KE WISHLIST</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Product Description -->
    <section class="product-description">
        <div class="container-custom">
            <div class="description-content fade-in">
                <h2 class="text-4xl md:text-5xl font-light mb-8">Cerita</h2>
                <p class="text-lg font-light leading-relaxed opacity-90 mb-12">{product.fullDescription}</p>
                
                <h3 class="text-3xl font-light mb-6 text-luxury">Catatan Rasa</h3>
                <div class="tasting-notes">
                    {product.tastingNotes.map(note => (
                        <div class="tasting-note">{note}</div>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- Brewing Guide -->
    <section class="brewing-guide">
        <div class="container-custom">
            <div class="text-center mb-16 fade-in">
                <p class="text-sm tracking-[0.3em] text-luxury mb-4">PANDUAN SEDUH</p>
                <h2 class="text-5xl md:text-6xl font-light">Penyajian Sempurna</h2>
            </div>

            <div class="brewing-methods">
                <div class="brewing-card fade-in">
                    <h3 class="text-2xl font-light mb-4">Espresso</h3>
                    <div class="brewing-detail">
                        <span>Dosis:</span>
                        <span>18-20g</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Hasil:</span>
                        <span>36-40g</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Waktu:</span>
                        <span>25-30 detik</span>
                    </div>
                </div>

                <div class="brewing-card fade-in">
                    <h3 class="text-2xl font-light mb-4">Pour Over</h3>
                    <div class="brewing-detail">
                        <span>Rasio:</span>
                        <span>1:16</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Suhu Air:</span>
                        <span>93-96°C</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Waktu:</span>
                        <span>3-4 menit</span>
                    </div>
                </div>

                <div class="brewing-card fade-in">
                    <h3 class="text-2xl font-light mb-4">French Press</h3>
                    <div class="brewing-detail">
                        <span>Rasio:</span>
                        <span>1:15</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Suhu Air:</span>
                        <span>93°C</span>
                    </div>
                    <div class="brewing-detail">
                        <span>Waktu:</span>
                        <span>4 menit</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Related Products -->
    <section class="related-products">
        <div class="container-custom">
            <div class="text-center mb-16 fade-in">
                <p class="text-sm tracking-[0.3em] text-luxury mb-4">JELAJAHI LEBIH</p>
                <h2 class="text-5xl md:text-6xl font-light">Anda Mungkin Juga Suka</h2>
            </div>

            <div class="related-grid">
                {Object.entries(products).filter(([key]) => key !== slug).slice(0, 2).map(([key, prod]) => (
                    <a href={`/id/product/${key}`} class="luxury-card p-8 fade-in">
                        <div class="image-reveal mb-8 overflow-hidden">
                            <img src={prod.image} alt={prod.name} class="w-full h-80 object-cover">
                        </div>
                        <h3 class="text-3xl font-light mb-3">{prod.name}</h3>
                        <p class="text-luxury text-sm tracking-widest mb-4">{prod.type}</p>
                        <p class="font-light leading-relaxed opacity-80 mb-6">{prod.description}</p>
                        <div class="flex justify-between items-center">
                            <span class="text-3xl font-light text-luxury">{prod.price}</span>
                            <span class="luxury-button text-xs py-2 px-6">LIHAT</span>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black py-20 px-8 border-t border-luxury/20">
        <div class="max-w-7xl mx-auto">
            <div class="grid md:grid-cols-4 gap-16 mb-16">
                <div>
                    <h3 class="text-3xl font-light tracking-[0.3em] text-luxury mb-6">KREO ROASTERY</h3>
                    <p class="font-light text-sm opacity-70 leading-relaxed">Menciptakan kopi luar biasa sejak 1987</p>
                </div>
                <div>
                    <h4 class="text-sm tracking-[0.2em] mb-6 text-luxury">JELAJAHI</h4>
                    <ul class="space-y-3 font-light text-sm">
                        <li><a href="/id#collection" class="hover:text-luxury transition">Koleksi</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Keanggotaan</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Peralatan</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Lokasi</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-sm tracking-[0.2em] mb-6 text-luxury">PERUSAHAAN</h4>
                    <ul class="space-y-3 font-light text-sm">
                        <li><a href="#" class="hover:text-luxury transition">Cerita Kami</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Keberlanjutan</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Karir</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Pers</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-sm tracking-[0.2em] mb-6 text-luxury">TERHUBUNG</h4>
                    <ul class="space-y-3 font-light text-sm">
                        <li><a href="#" class="hover:text-luxury transition">Instagram</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Facebook</a></li>
                        <li><a href="#" class="hover:text-luxury transition">LinkedIn</a></li>
                        <li><a href="#" class="hover:text-luxury transition">Kontak</a></li>
                    </ul>
                </div>
            </div>
            <div class="pt-8 border-t border-luxury/20 text-center">
                <p class="text-xs font-light tracking-wider opacity-50">© 2024 KREO ROASTERY. SEMUA HAK DILINDUNGI.</p>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Image gallery
            const thumbnails = document.querySelectorAll('.thumbnail');
            const mainImage = document.getElementById('mainImage') as HTMLImageElement;

            thumbnails.forEach(thumb => {
                thumb.addEventListener('click', function() {
                    const newImage = this.getAttribute('data-image');
                    if (newImage && mainImage) {
                        mainImage.style.opacity = '0';
                        setTimeout(() => {
                            mainImage.src = newImage;
                            mainImage.style.opacity = '1';
                        }, 300);
                    }
                    
                    thumbnails.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Quantity selector
            const decreaseBtn = document.getElementById('decreaseQty');
            const increaseBtn = document.getElementById('increaseQty');
            const quantityInput = document.getElementById('quantity') as HTMLInputElement;

            if (decreaseBtn && increaseBtn && quantityInput) {
                decreaseBtn.addEventListener('click', () => {
                    const currentValue = parseInt(quantityInput.value);
                    if (currentValue > 1) {
                        quantityInput.value = (currentValue - 1).toString();
                    }
                });

                increaseBtn.addEventListener('click', () => {
                    const currentValue = parseInt(quantityInput.value);
                    quantityInput.value = (currentValue + 1).toString();
                });
            }

            // Scroll animations
            function checkScroll() {
                const elements = document.querySelectorAll('.fade-in');
                elements.forEach(el => {
                    const elementTop = el.getBoundingClientRect().top;
                    const viewportBottom = window.innerHeight;
                    
                    if (elementTop < viewportBottom - 150) {
                        el.classList.add('active');
                    }
                });
            }
            
            setTimeout(() => {
                checkScroll();
            }, 300);
            
            window.addEventListener('scroll', checkScroll);

            // Navbar scroll effect
            window.addEventListener('scroll', function() {
                const nav = document.querySelector('nav');
                if (nav) {
                    if (window.scrollY > 100) {
                        nav.classList.add('scrolled');
                    } else {
                        nav.classList.remove('scrolled');
                    }
                }
            });
        });
    </script>
</body>
</html>


<style is:global>
