    nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
        padding: 2rem 4rem;
        transition: all 0.5s ease;
        background: transparent;
    }
    
    nav.scrolled {
        background: rgba(0, 0, 0, 0.95);
        padding: 1.5rem 4rem;
