    .luxury-button.w-full {
        width: 100%;
    }

    .luxury-button-outline {
        padding: 1rem 3rem;
        background: transparent;
        border: 1px solid rgba(201, 169, 97, 0.3);
        color: #f5f5f5;
        font-weight: 300;
        letter-spacing: 0.2em;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .luxury-button-outline:hover {
        border-color: #c9a961;
        color: #c9a961;
    }

    .luxury-button-outline.w-full {
        width: 100%;
    }

    .product-description {
        padding: 100px 0;
        background: #000;
    }

    .description-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .tasting-notes {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

